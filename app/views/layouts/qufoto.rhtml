            <script type="text/javascript">
                $('navmenu').firstDescendant().addClassName('pink').setStyle({paddingRight:'8px'});
                $$('ul#navmenu > li:not(:first-child):not(:last-child)').each (function (e) {
                    e.insert({bottom: '<span>|</span>'});
                });
            </script>
