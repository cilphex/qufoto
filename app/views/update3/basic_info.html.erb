<h1>My Information</h1>

<form id="info_form">
	<table class="dataform">
		<tr>
			<td>Name</td>
			<td>
				<input type="text" name="name" value="<%= @info.name %>"/>
			</td>
		</tr>
		<tr>
			<td>Email</td>
			<td>
				<input type="text" name="email" value="<%= @info.email %>"/>
			</td>
		</tr>
		<tr>
			<td>Website title</td>
			<td>
				<input type="text" name="title" value="<%= @info.title %>"/>
			</td>
		</tr>
		<tr>
			<td>Upper left text</td>
			<td>
				<input type="text" name="toptext" value="<%= @info.toptext %>"/>
			</td>
		</tr>
		<tr>
			<td>Meta description</td>
			<td>
				<input type="text" name="description" value="<%= @info.description %>"/>
			</td>
		</tr>
		<tr>
			<td>Meta keywords</td>
			<td>
				<input type="text" name="keywords" value="<%= @info.keywords %>"/>
			</td>
		</tr>
		<tr>
			<td>Meta verify-v1</td>
			<td>
				<input type="text" name="verifyv1" value="<%= @info.verifyv1 %>"/>
			</td>
		</tr>
		<tr>
			<td>Contact info</td>
			<td>
				<textarea name="contact_info"><%= @info.contact_info %></textarea>
			</td>
		</tr>
		<tr>
			<td></td>
			<td>
				<a id="save_info" href="javascript:void(0)" onclick="Basic.saveInfo()">Save</a>
				<span id="saving" class="saving" style="display: none;">Saving...</span>
				<span id="saved" class="saved" style="display: none;">Saved</span>
			</td>
		</tr>
	</table>
</form>