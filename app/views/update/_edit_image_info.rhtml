<div style="margin-bottom: 10px; padding: 10px 0 10px 0; border-bottom: 1px dotted #DDDDDD;">
    <table width=100% cellpadding=0 cellspacing=0>
        <tr>
            <td align=left>
                Portfolio: <%= render :partial => "portfolio_select" %>
            </td><td align=right>
                Select an image to update its information
            </td>
        </tr>
    </table>
</div>

<%= observe_field("portfolio_id_first", 
    :on => "change", 
    :url => {:action => "edit_images"}, 
    :update => "imageThumbs",
    :with => "portfolio_id",
    :loading => "$('loader').show();",
    :complete => "$('loader').hide();") %>

<div id="imageThumbs">
    <%= render :partial => "edit_image_info_thumbs" %>
</div>